structure  (spellcasting) {
  description (The details on how a given class manages casting spells.)
  // The spellcasting class this is reserved for.
  property (className)
  {
      type(className)
      min (Required) max (One)
  }
  // The ability that casting scales off of for this class.
  property (castingAbility)
  {
    type(abilityName)
    min (Required) max (Many)
  }
  // Cantrips information
  property (castingInfo)
  {
    type (info)
    min (Required) max (Many)
  }
